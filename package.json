{
  "name": "sql-text-tools",
  "version": "1.0.0",
  "homepage": "https://taylordevereaux.github.io/sql-text-to-insert/",
  "private": true,
  "dependencies": {
    "bootstrap": "^4.0.0",
    "classnames": "^2.2.5",
    "jquery": "^3.3.1",
    "popper.js": "^1.12.9",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-scripts": "1.1.0",
    "reactstrap": "^5.0.0-beta"
  },
  "scripts": {
    "start-theme": "cd ../black-matter-theme && yarn start",
    "start-react": "react-scripts start",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "yarn run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start": "npm-run-all --parallel watch-css start-theme start-react",
    "build": "yarn run build-css && react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "predeploy": "yarn run build",
    "deploy": "gh-pages -d build"
  },
  "devDependencies": {
    "gh-pages": "^1.1.0",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "^4.1.2"
  }
}
